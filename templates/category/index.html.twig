{% extends 'base.html.twig' %}

{% block pageinfo %}
    {{ include('includes/page-info.html.twig', {'title': category.getName|default('Category Page')}) }}
{% endblock %}

{% block categories %}
    <section class="category-section spad">
        <div class="container">
            <div class="row">

                {{ include('includes/category-sidebar.html.twig') }}

                <div class="col-lg-9  order-1 order-lg-2 mb-5 mb-lg-0">
                    <div class="row">

                        {% for subC in category.getSubCategory %}
                            {% for product in subC.getProducts %}
                                <div class="col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="pi-pic">
                                            {# When I get around to working on sales, I'll bring this back somehow
                                            <div class="tag-sale">ON SALE</div>
                                            #}
                                            <a href="{{ path('product', {'slug': product.getSlug}) }}">
                                                <img src="{{ vich_uploader_asset(product.getImage, 'imageFile') }}" alt="{{ product.getName }}">
                                            </a>
                                            <div class="pi-links">
                                                <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                                <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                                            </div>
                                        </div>
                                        <div class="pi-text">
                                            <h6>${{ product.getPrices }}</h6>
                                            <p>{{ product.getName }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <div class="text-center w-100 pt-3">
                            <button class="site-btn sb-line sb-dark">LOAD MORE</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
